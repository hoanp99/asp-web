@model PagedList.IPagedList<aspweb.Models.tbl_users>
@using PagedList.Mvc;


@{
    ViewBag.Title = "Accounts";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<div class="row">
    <div class="col-md-12">
        <div class="bg-mattBlackLight my-2 p-3 text-center">
            <span class="title">Danh sách tài khoản</span>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-8">
        <div class="bg-mattBlackLight my-2 p-3 text-center d-flex">
            <input type="text" id="keyword" name="keyword" class="form-control" placeholder="Tìm kiếm" style="margin-right: 5px;">
            <button type="submit" id="btnSearch" name="btnSearch" value="Tìm kiếm" class="btn btn-primary">Seach</button>
        </div>
    </div>
    <div class="col-md-4">
        <div class="bg-mattBlackLight my-2 p-3 text-center">
            <a class="btn btn-primary" href="@Url.Action("CreateAccount", "Admin")" role="button">Thêm mới</a>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th scope="col">
                        #
                    </th>
                    <th scope="col">
                        Tên tài khoản
                    </th>
                    <th scope="col">
                        Mật khẩu
                    </th>
                    <th scope="col">
                        Vai trò
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 1;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @i
                        </td>
                        @{
                            i++;
                        }
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.username)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.password)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.role_id)
                        </td>
                        <td>
                            <input type="button" class="btn btn-danger" value="Chi Tiết" onclick="location.href='@Url.Action("DeleteCategory", "Admin", new { id = item.id })'" />
                            | <input type="button" class="btn btn-danger" value="Sửa" onclick="location.href='@Url.Action("UpdateCategory", "Admin", new { id = item.id })'" />
                            | <input type="button" class="btn btn-danger" value="Xóa" onclick="location.href='@Url.Action("DeleteCategory", "Admin", new { id = item.id })'" />

                        </td>
                    </tr>

                }

            </tbody>
        </table>
        <br />
        @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount
        @Html.PagedListPager(Model, page => Url.Action("Categories", "Admin", new { page }))
    </div>
</div>



