@model aspweb.Models.Order
@{
    ViewBag.Title = "Đơn hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="bg-mattBlackLight my-2 p-3 text-center">
            <span class="title">Thông tin đơn hàng</span>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="bg-mattBlackLight my-2 p-3">
            <dl class="row">
                <dt class="col-sm-3">Mã đơn hàng:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model._Saleorder.code)</dd>

                <dt class="col-sm-3">Mã Tài khoản:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model._Saleorder.user_id)</dd>

                <dt class="col-sm-3">Tổng tiền:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model._Saleorder.total)</dd>

                <dt class="col-sm-3">Tên khách hàng:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model._Saleorder.customer_name)</dd>

                <dt class="col-sm-3">Địa chỉ khách hàng:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model._Saleorder.customer_address)</dd>

                <dt class="col-sm-3">Số điện thoại:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model._Saleorder.customer_phone)</dd>

                <dt class="col-sm-3">Email:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model._Saleorder.cutomer_email)</dd>

                <dt class="col-sm-3">Tình trạng:</dt>
                <dd class="col-sm-9">
                    @{ 
                        var result = "";
                    }
                    @if (String.IsNullOrEmpty(Model._Saleorder.status.ToString()))
                    {
                        result = "Đang xử lý";
                    }
                    else if (Model._Saleorder.status == 0)
                    {
                        result = "Đang giao";
                    }
                    else if (Model._Saleorder.status == 1)
                    {
                        result = "Đã giao";
                    }
                    @result
                </dd>
            </dl>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="bg-mattBlackLight my-2 p-3 text-center">
            <span class="title">Danh sách sản phẩm</span>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th scope="col">
                        #
                    </th>
                    <th scope="col">
                        Mã sản phẩm
                    </th>
                    <th scope="col">
                        Tên sản phẩm
                    </th>
                    <th scope="col">
                        Số lượng
                    </th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 1;
                }
                @foreach (var item in Model._Products)
                {
                    <tr>
                        <td class="align-middle">
                            @i
                        </td>
                        @{
                            i++;
                        }
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.product_id)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.tbl_products.title)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.quality)
                        </td>
                    </tr>

                }

            </tbody>
        </table>
    </div>
</div>

