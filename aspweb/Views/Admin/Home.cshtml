@model IEnumerable<aspweb.Models.tbl_products>
@{
    ViewBag.Title = "Trang chủ";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-4 my-3">
        <div class="bg-mattBlackLight px-3 py-3">
            <h4 class="mb-2">New Clients</h4>
            <div class="progress" style="height: 16px;">
                <div class="progress-bar bg-warning text-mattBlackDark" role="progressbar" style="width: 25%;"
                     aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                    25
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4 my-3">
        <div class="bg-mattBlackLight px-3 py-3">
            <h4 class="mb-2">New Projects</h4>
            <div class="progress" style="height: 16px;">
                <div class="progress-bar bg-info text-mattBlackDark" role="progressbar" style="width: 50%;"
                     aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                    50
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4 my-3">
        <div class="bg-mattBlackLight p-3">
            <h4 class="mb-2">Completed</h4>
            <div class="progress" style="height: 16px;">
                <div class="progress-bar bg-success" role="progressbar" style="width: 80%;" aria-valuenow="25"
                     aria-valuemin="0" aria-valuemax="100">
                    80
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="bg-mattBlackLight my-2 p-3 text-center">
            <span class="title">Danh sách sản phẩm bán chạy nhất</span>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <table class="table table-striped table-dark">
            <thead>
                <tr>
                    <th scope="col">
                        #
                    </th>
                    <th scope="col">
                        Tên sản phẩm
                    </th>
                    <th scope="col">
                        Giá
                    </th>
                    <th scope="col">
                        Giá khuyến mãi
                    </th>
                    <th scope="col">
                        Số lượng
                    </th>
                    <th scope="col">
                        Hình ảnh
                    </th>
                    <th scope="col">
                        Danh mục
                    </th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 1;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            @i
                        </td>
                        @{
                            i++;
                        }
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.title)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.price)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.price_sale)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.quantity)
                        </td>
                        <td>
                            @{
                                string ImagePath = "~/Resources/Images/" + item.image;
                            }
                            <img src="@Url.Content(ImagePath)" class="img-thumbnail" width="100" height="100" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.tbl_category.name)
                        </td>
                    </tr>

                }

            </tbody>
        </table>
    </div>
</div>

