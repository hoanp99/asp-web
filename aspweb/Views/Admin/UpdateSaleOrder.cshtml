@model aspweb.Models.tbl_saleorder
@{
    ViewBag.Title = "Đơn hàng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="bg-mattBlackLight my-2 p-3 text-center">
            <span class="title">Cập nhật đơn hàng</span>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <div class="bg-mattBlackLight my-2 p-3">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                @Html.HiddenFor(model => model.id)
                @Html.HiddenFor(model => model.code)
                @Html.HiddenFor(model => model.user_id)
                @Html.HiddenFor(model => model.total)

                <div class="form-group">
                    <label>Mã đơn hàng:</label>
                    @Html.TextBoxFor(model => model.code, new { @class = "form-control", disabled = "disabled" })
                </div>

                <div class="form-group">
                    <label>Tài khoản đặt hàng:</label>
                    @Html.TextBoxFor(model => model.tbl_users.username, new { @class = "form-control", disabled = "disabled" })
                </div>

                <div class="form-group">
                    <label>Tổng tiền:</label>
                    @Html.TextBoxFor(model => model.total, new { @class = "form-control", disabled = "disabled" })
                </div>

                <div class="form-group">
                    <label>Tên khách hàng:</label>
                    @Html.TextBoxFor(model => model.customer_name, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.customer_name, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label>SĐT khách hàng:</label>
                    @Html.TextBoxFor(model => model.customer_phone, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.customer_name, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label>Địa chỉ khách hàng:</label>
                    @Html.TextBoxFor(model => model.customer_address, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.customer_name, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label>Email khách hàng:</label>
                    @Html.TextBoxFor(model => model.cutomer_email, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.customer_name, "", new { @class = "text-danger" })
                </div>
                    
                <div>
                    <label>Tình trạng:</label>
                    @Html.DropDownListFor(model=>model.status, new List<SelectListItem>
                    {
                    new SelectListItem {Text = "Đang xử lý", Value = "0"},
                    new SelectListItem {Text = "Đang giao", Value = "1"},
                    new SelectListItem {Text = "Đã giao", Value = "2"},
                    }, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.status, "", new { @class = "text-danger" })
                </div>



                @Html.HiddenFor(model => model.created_by)
                @Html.HiddenFor(model => model.created_date)

                <input type="submit" class="btn btn-primary my-2" value="Sửa" />


            }

        </div>
    </div>
    <div class="col-md-6">
        <div class="bg-mattBlackLight my-2 p-3"></div>
    </div>
</div>



